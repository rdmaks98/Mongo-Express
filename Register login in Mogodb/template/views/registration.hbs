{{>link}}

<div class="container-fluid px-1 px-md-5 px-lg-1 px-xl-5 py-5 mx-auto">
  <div class="card card0 border-0">
    <div class="row d-flex">
      
      <div class="col-lg-6">
        <div class="card2 card border-0 px-4 py-5">
          <div class="mt-2">
            <form  action="/register" method="POST" id="register">
              <div class="row px-3">
                <label class="mb-1">
                  <h6 class="mb-0 text-sm">Name</h6>
                </label>
                <input class="mb-4" type="text" name="name" placeholder="Enter a valid Name address" />
              </div>

              <div class="row px-3">
                <label class="mb-1">
                  <h6 class="mb-0 text-sm">Email</h6>
                </label>
                <input class="mb-4" type="email" name="email" placeholder="Enter a valid Email address" />
              </div>

              <div class="row px-3">
                <label class="mb-1">
                  <h6 class="mb-0 text-sm">Phone</h6>
                </label>
                <input class="mb-4" type="number" name="phone" placeholder="Enter a valid Phone address" />
              </div>

              <div class="row px-3">
                <label class="mb-1">
                  <h6 class="mb-0 text-sm">Password</h6>
                </label>
                <input class="mb-4" type="password" name="password" placeholder="Enter a valid Password address" />
              </div>

              <div class="row px-3">
                <label class="mb-1">
                  <h6 class="mb-0 text-sm">Collage</h6>
                </label>
                <input class="mb-4" type="text" name="college" placeholder="Enter a valid Collage address" />
              </div>

              <div class="row px-3">
                <label class="mb-1">
                  <h6 class="mb-0 text-sm">Er.No</h6>
                </label>
                <input class="mb-4" type="text" name="erNo" placeholder="Enter a valid Enrollment Number address" />
              </div>

              <div class="row px-3">
                <label class="mb-1">
                  <h6 class="mb-0 text-sm">Semester</h6>
                </label>
                <input class="mb-4" type="text" name="sem" placeholder="Enter a valid Semester address" />
              </div>

              <div class="row mb-3 mt-3 px-3">
                <input type="submit" value="register" class="btn btn-blue text-center"> 
              </div>
              <div class="row mb-4 px-3">
                <small class="font-weight-bold">Don't have an account?
                  <a href="/login" class="text-danger">Login</a></small>
              </div>
            </form>
          </div>
          
        </div>
      </div>

      <div class="col-lg-6">
        <div class="card1 pb-5">
          <div class="row"></div>
          <div class="row p-5 justify-content-center mt-5 mb-5 border-line">
            <img src="https://i.imgur.com/uNGdWHi.png" class="image" />
          </div>
        </div>
      </div>
    </div>
    <div class="bg-blue py-4">
      <div class="row px-3">
        <small class="ml-4 ml-sm-5 mb-2">Copyright &copy; 2019. All rights reserved.</small>
        <div class="social-contact ml-4 ml-sm-auto">
          <span class="fa fa-facebook mr-4 text-sm"></span>
          <span class="fa fa-google-plus mr-4 text-sm"></span>
          <span class="fa fa-linkedin mr-4 text-sm"></span>
          <span class="fa fa-twitter mr-4 mr-sm-5 text-sm"></span>
        </div>
      </div>
    </div>
  </div>
</div>